{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-kafka/src",
  "monorepo": true,
  "root": "apps/nestjs-kafka",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/nestjs-kafka/tsconfig.app.json"
  },
  "projects": {
    "nestjs-kafka": {
      "type": "application",
      "root": "apps/nestjs-kafka",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-kafka/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-kafka/tsconfig.app.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    }
  }
}